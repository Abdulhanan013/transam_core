<div class="row">
	<div class="col-md-12">
		<ul class="col-md-8 col-md-offset-2">
		<%= dialog_tag('Note', {:icon => 'fa fa-file'}) do %>
			<%= simple_form_for([@asset, @note], :url => @note.new_record? ? inventory_notes_path(@asset) : inventory_note_path(@asset, @note), :method => @note.new_record? ? "post" : "put", :html => {:multipart => true, :class => 'form-horizontal' }) do |f| %>
				<%= f.input :comments, :prompt => 'Some notes...', :input_html => { :class => 'col-md-10', :rows => 20 } %>
				<div class="form-actions panel-form-actions">
					<%= f.button :submit, 'Save note' %>
					<%= submit_tag 'Cancel', :name => 'cancel', :class=>"btn" %>
				</div>
			<% end %>
		<% end %>
		</ul>
	</div>
</div>	
