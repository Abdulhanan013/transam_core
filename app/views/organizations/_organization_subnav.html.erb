<%= sub_nav_tag({}) do %>
	<li>
		<%= link_to organizations_path do %> <i class="fa fa-building-o"></i> <%= "My Organizations (#{current_user.organizations.count})" %>
		<% end %>
	</li>
	<li>
		<%= link_to users_path(:org => @org) do %>
		<i class="fa fa-group"></i> <%= "Users (#{@org.users.count})"%>
		<% end %>
	</li>
	<li>
		<%= link_to map_organization_path(@org) do %>
		<i class="fa fa-globe"></i> Map
		<% end %>
	</li>
	<% if can? :update, @org %>

		<% if ! current_page?(edit_organization_path(@org)) %>
			<li>
				<%= link_to edit_organization_path(@org) do %>
				<i class="fa fa-edit"></i> Update
				<% end %>
			</li>
		<% end %>

	<% end %>
<% end %>
