:css
  .bs-bars.pull-left {
    float: none !important;
    display: inline-block;
    width: 90%;
  }

  .navbar-form.navbar-right {
    margin-top: 0px;
  }

  #add_org {
    vertical-align: top;
  }

.btn-group{:role => 'group', :style => 'margin-left: 0!important;'}
  %button.btn.btn-default.dropdown-toggle{:data => {:toggle => 'dropdown'}, :aria => {:exapanded => 'false'}}
    Organization Type
    %span.caret
  %ul.dropdown-menu{:role => 'menu'}
    %li
      = link_to "All types", organizations_path
    %li.divider
    - OrganizationType.all.each do |org_type|
      %li
        = link_to org_type.name, organizations_path(:organization_type_id => org_type.id)

.navbar-form.navbar-right
  %button.btn.btn-primary.dropdown-toggle{:data => {:toggle => 'dropdown'}, :aria => {:exapanded => 'false'}, :id => "add_org"}
    Add an Organization
    %span.caret
  %ul.dropdown-menu{:role => 'menu'}
    - OrganizationType.all.each do |org_type|
      - if org_type.class_name.constantize.createable? && (can? :create, Organization)
        %li
          = link_to new_organization_path(:organization_type_id => org_type.id) do
            %i.fa.fa-plus.fa-fw
            = " New #{org_type}"