<% if @organization.errors.count > 0 %>
	<%= render(:partial => 'shared/form_errors', :locals => {:obj => @organization}) %>	
<% end%>
<div class="row-fluid">
	<%= simple_form_for(@organization, :html => {:class => 'form-vertical span12' }, :defaults => {:disabled => @disabled }) do |f| %>
	<div class="row-fluid">
		<ul class="thumbnails">
			<%= panel_tag('Corporate', {:icon => 'fa fa-book', :class => "span4 form_part"}) do %>
				<%= f.input :name %>
				<%= f.association :organization_type %>
				<%= f.association :district %>
			<% end %>
			<%= panel_tag('Contact', {:icon => 'fa fa-book', :class => "span4 form_part"}) do %>
				<%= f.input :phone, :as => :tel %>
				<%= f.input :fax, :as => :tel %>
				<%= f.input :address1 %>
				<%= f.input :address2 %>
				<%= f.input :city %>
				<%= f.input :state %>
				<%= f.input :zip %>				
				<%= f.input :url, :as => :url %>
			<% end %>
			<%= panel_tag('Services', {:icon => 'fa fa-book', :class => "span4 form_part"}) do %>
				<%= f.association :interest_rate %>
			<% end %>
		</ul>
	</div>
	<% if ! @disabled %>
	<div class="form-actions">
		<%= f.button :submit %>
		<%= submit_tag 'Cancel', :name => 'cancel', :class=>"btn" %>
	</div>
	<% end %>
	<% end %>
</div>
