<div class="row">
	<div class="col-md-12">
		<table id="datatable" class="table table-condensed table-striped table-hover table-bordered">
			<thead>
				<tr>
					<th>Time</th>
					<th>User</th>
					<th>Action</th>
					<th>Activity</th>
				</tr>
			</thead>
			<tbody>
				<% @activities.each do |a| %>
				<tr>
					<td><%= format_as_date_time(a.activity_time) %></td>
					<td><%= a.user.name %></td>					
					<td><%= a.item_type %></td>					
					<td><%= a.activity %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>


<%= render 'shared/datatable_javascript' %>
