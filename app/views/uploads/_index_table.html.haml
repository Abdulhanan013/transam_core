= javascript_include_tag  "https://kit.fontawesome.com/#{ENV['FONT_AWESOME']}.js"
.library-table
  %table.elbat{:id => table_dom_id,
    :use => 'true',
    :data => {:use => 'true',
      :side => 'client',
      :current_page => '0',
      :current_page_size => '10',
      :page_sizes => "10,20,50,100,200",
      :search => 'client',
      :export => "['csv', 'txt', 'excel']",
      :columns => "File Name,drilldown-link,
                  Organization,
                  Content,
                  Loaded By,
                  Status,
                  Num Rows Processed,
                  Num Rows Added,
                  Num Rows Failed,
                  Processing Time (s),
                  Uploaded At,right-align,
                  Num Rows Replaced,
                  Num Rows Skipped,
                  Processing Started,
                  Processing Completed,",
        :selected_columns => "File Name,
                  Organization,
                  Content,
                  Loaded By,
                  Status,
                  Num Rows Processed,
                  Num Rows Added,
                  Num Rows Failed,
                  Processing Time (s),
                  Uploaded At",
      :cookies => "true",
      :sort => 'client',
      :params => "{}",
      :filter => "[]",
      :data_source => 'client',
      :url => ''}}
  - @uploads.each_with_index do |f, index|
    :javascript
      add_row('#{table_dom_id}',
      {
        "File Name": '#{h link_to f.original_filename, upload_path(f)}',
        "Organization": '#{h f.organization.present? ? f.organization.to_s : "Multi Org" }',
        "Content": '#{h f.file_content_type }',
        "Loaded By": '#{h f.user.name }',
        "Status": '#{h f.file_status_type }',
        "Num Rows Processed": '#{h format_as_integer(f.num_rows_processed) }',
        "Num Rows Added": '#{h format_as_integer(f.num_rows_added) }',
        "Num Rows Failed": '#{h format_as_integer(f.num_rows_failed) }',
        "Processing Time (s)": '#{h format_as_integer(f.processing_time.to_i) }',
        "Uploaded At": '#{h format_as_date_time(f.created_at) }',
        "Num Rows Replaced": '#{h format_as_integer(f.num_rows_replaced) }',
        "Num Rows Skipped": '#{h format_as_integer(f.num_rows_skipped) }',
        "Processing Started": '#{h format_as_date_time(f.processing_started_at) }',
        "Processing Completed": '#{h format_as_date_time(f.processing_completed_at) }',
      }, #{index});




