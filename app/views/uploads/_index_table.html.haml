:ruby
  table_dom_id = SecureRandom.hex

%table.table.table-hover{:id => table_dom_id, :data => {:toggle => 'table',
  :card_view => "false",
  :pagination => 'true',
  :page_list => "[5, 10, 20, 50, 100, 200]",
  :page_size => current_user.num_table_rows,
  :show_pagination_switch => 'true',
  :search => 'false',
  :show_columns => 'true',
  :show_export => 'true',
  :show_toggle => 'true',
  :resizable => 'true',
  :search => 'false'}}
  %thead
  %thead
    %th.left Agency
    %th.left File Name
    %th.right Content
    %th.right Loaded By
    %th.right Status
    %th.right Loaded On
  %tbody
    - @uploads.each do |f|
      %tr{:data => {:action_path => "#{upload_path(f)}"}}
        %td.left= f.organization.short_name
        %td.left= f.original_filename
        %td.right= f.file_content_type
        %td.right= f.user.name
        %td.right= f.file_status_type
        %td.right= format_as_date_time(f.created_at)


:javascript

  $(window).resize(function() {
    $("##{table_dom_id}").bootstrapTable('resetView');
  });
