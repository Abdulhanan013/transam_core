<div class="row">
	<% @uploads.each do |upload| %>
		<%= action_thumbnail_tag({:class => 'doc_thumbnail col-md-3', :icon => "fa fa-upload", :title => upload.original_filename, :path => upload_path(upload)}) do %>
			<dl class="dl-horizontal thumbnail-list">
				<dt>Content:</dt>
				<dd><%= upload.file_content_type %></dd>
				<dt>Status:</dt>
				<dd><%= upload.file_status_type %></dd>
				<dt>Loaded by:</dt>
				<dd><%= upload.user.name %></dd>
				<dt>Loaded on:</dt>
				<dd><%= format_as_date(upload.created_at) %></dd>
			</dl>
		<% end %>
	<% end %>
</div>
