<div class="row-fluid">
	<div class="span12">
		<ul class="thumbnails">
			<% @uploads.each do |upload| %>
				<%= action_thumbnail_tag({:class => 'span3 doc_thumbnail', :icon => "fa fa-upload", :title => upload.original_filename, :path => upload_path(upload)}) do %>
					<%= content_tag "address" do %>
						<%= format_field("Loaded by", upload.user.name) %>
						<%= format_field("Loaded on", format_as_date(upload.created_at)) %>
						<%= format_field("File Status", upload.file_status_type) %>
						<%= format_field("Rows processed", format_as_integer(upload.num_rows_processed)) %>
					<% end %>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>

<script type="text/javascript">

	$(document).ready(function() {

		transam.fix_thumbnail_margins(3, 'doc_thumbnail');
		transam.make_same_height('.doc_thumbnail');
	});

</script>
