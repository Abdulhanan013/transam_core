<div class="row-fluid">
	<div class="span12">
		<ul class="thumbnails">
			<% @uploads.each do |upload| %>
				<%= action_thumbnail_tag({:class => 'span2 doc_thumbnail', :icon => "fa fa-upload", :title => upload.original_filename, :path => upload_path(upload)}) do %>
					<%= content_tag "address" do %>
					<% end %>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>

<script type="text/javascript">

	$(document).ready(function() {

		transam.fix_thumbnail_margins(2, 'doc_thumbnail');
		transam.make_same_height('.doc_thumbnail');
	});
	
</script>
