- if can? :create, Upload
  = link_to templates_uploads_path, :class => 'btn btn-default btn-group' do
    %i.fa.fa-fw.fa-download
    = " Create a new Template"

  = link_to new_upload_path, :class => 'btn btn-default btn-group' do
    %i.fa.fa-fw.fa-upload
    = " Upload a Template"

  .btn-group
    %button.btn.btn-default.dropdown-toggle{:data => {:toggle => 'dropdown'}, :aria => {:exapanded => 'false'}}
      Filter Status
      %span.caret
    %ul.dropdown-menu{:role => 'menu'}
      %li
        = link_to "All statuses", uploads_path
      %li.divider
      - FileStatusType.all.each do |type|
        %li
          = link_to type.name, uploads_path(:file_status_type_id => type.id)
