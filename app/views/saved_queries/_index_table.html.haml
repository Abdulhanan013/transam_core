= javascript_include_tag  "https://kit.fontawesome.com/#{ENV['FONT_AWESOME']}.js"
.library-table
  %table.elbat{:id => table_dom_id,
    :use => 'true',
    :data => {:use => 'true',
      :side => 'client',
      :current_page => '0',
      :current_page_size => '10',
      :page_sizes => "10,20,50,100,200",
      :search => 'client',
      :export => "['csv', 'txt', 'excel']",
      :columns => "Name,
                  Description,
                  Shared To,
                  Shared From,
                  SQL Query,
                  Created Date & Time,right-align,
                  Created By,
                  Last Updated Date & Time,right-align,
                  Last Updated By,",
        :selected_columns => "Name,
                  Description,
                  Shared To,
                  Shared From,
                  SQL Query,
                  Created Date & Time,
                  Created By,
                  Last Updated Date & Time,
                  Last Updated By",
      :cookies => "true",
      :sort => 'client',
      :params => "{}",
      :filter => "[]",
      :data_source => 'client',
      :url => ''}}
  - @queries.each_with_index do |s, index|
    :javascript
      add_row('#{table_dom_id}',
      {        
        "Name": '#{h s.name }',
        "Description": '#{h s.description }',
        "Shared To": '#{h s.organizations.count > 1 ? "Multiple" : s.organizations.first.try(:to_s) }',
        "Shared From": '#{h s.created_by_user.try(:organization) }',
        "SQL Query": '#{h s.to_sql }', // WTF
        "Created Date & Time": '#{h format_as_date_time(s.created_at) }',
        "Created By": '#{h s.created_by_user }',
        "Last Updated Date & Time": '#{h format_as_date_time(s.updated_at) }',
        "Last Updated By": '#{h s.updated_by_user }',
      }, #{index});




