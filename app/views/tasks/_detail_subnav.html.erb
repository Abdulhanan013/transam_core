<%= sub_nav_tag({}) do %>
	<li>
		<%= link_to user_tasks_path(current_user) do %> 
			<i class="fa fa-angle-left"></i> Back
		<% end %>
	</li>
	<% unless current_page?(new_user_task_path(current_user, @task)) %>
		<li>
			<%= link_to new_user_task_path(current_user) do %> 
				<i class="fa fa-plus"></i> New Task
			<% end %>
		</li>
	<% end %>
	<% if @task && ! @task.new_record? && ! @task.complete? && ! current_page?(edit_user_task_path(current_user, @task)) %>
		<li>
			<%= link_to edit_user_task_path(current_user, @task) do %> 
				<i class="fa fa-edit"></i> Update
			<% end %>
		</li>
	<% end %>
	</ul>
	<% unless @task.complete? %>
		<%= form_tag update_status_user_task_path(current_user, @task), :id => 'task_action_form', :method => "patch", :class => 'navbar-form pull-right form-inline' do %>
			<div class="input-append">
				<%= select_tag(:task_status, options_for_select(TaskStatusType.all.collect{|a| [a.name, a.id]}), :class => "form-control", :prompt => 'Update status...') %>
				<button class="btn" type="submit" id="submit_button">
					Set
				</button>
			</div>
		<% end unless @task.new_record? %>
	<% end %>
<% end %>
