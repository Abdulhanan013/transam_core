.breadcrumbs
  - unless params[:controller] == 'dashboards'
    - if @total_rows and @total_rows > 0
      .row
        .col-lg-10.col-md-10.col-sm-9.col.col-xs-8
          = render_breadcrumbs :builder => ::BootstrapBreadcrumbsBuilder, :separator => "&raquo;"
        .col-lg-2.col-md-2.col-sm-3.col.col-xs-4
          #row_pager
            = render 'shared/row_pager'
    - else
      = render_breadcrumbs :builder => ::BootstrapBreadcrumbsBuilder, :separator => "&raquo;"
