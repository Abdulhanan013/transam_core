.breadcrumbs{:style => 'margin-top: 30px;'}
  - unless params[:controller] == 'dashboards'
    - if @prev_record_path or @next_record_path
      .row
        .col-md-10
          = render_breadcrumbs :builder => ::BootstrapBreadcrumbsBuilder, :separator => "&raquo;"
        .col-md-2
          = render 'shared/row_pager'
    - else
      = render_breadcrumbs :builder => ::BootstrapBreadcrumbsBuilder, :separator => "&raquo;"
