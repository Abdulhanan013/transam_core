<!-- Add any globally applicable javascript here -->
<script type="text/javascript">
	
	// Finds all elements marked as info icons and turns them into popups
	function enable_info_popups(class_name) {
		$(class_name).popover({
			trigger: 'hover'
		});
	};
	
	function install_quick_link_handlers() {
		// Enable the quick links
		$('[data-action-path]').click(function() {
			var url = $(this).data('action-path');
			document.location.href = url;
		});		
	};
	
	$(document).ready(function() {
		install_quick_link_handlers();
		
		// Render any info icons as popovers
		enable_info_popups('.info_icon');
	
		// Check for any message divs and fade them out
		elem = $('#message');
		if (elem) {
			elem.fadeOut(5000);
		}	
	});
	
	  		
</script>
