%ol.breadcrumb.row-pager
  %li
    - if @prev_record_path == "#"
      %i.fa.fa-chevron-circle-left.text-muted.text-left
    - else
      = link_to @prev_record_path, :title => 'Previous record', :remote => @row_pager_remote.nil? ? false : @row_pager_remote  do
        %i.fa.fa-chevron-circle-left.text-left

  %li.active
    = "<small>#{@row_number} of #{@total_rows}</small>".html_safe

  %li
    - if @next_record_path == "#"
      %i.fa.fa-chevron-circle-right.text-muted.text-right
    - else
      = link_to @next_record_path, :title => 'Next record', :remote => @row_pager_remote.nil? ? false : @row_pager_remote  do
        %i.fa.fa-chevron-circle-right.text-right
