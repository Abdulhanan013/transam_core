:ruby
  table_dom_id = SecureRandom.hex
  show_actions ||= 0

:css

  .col-item:nth-child(1){
    width:20%;
  }
  .col-item:nth-child(2){
    width:20%;
  }
  .col-item:nth-child(3){
    width:20%;
  }
  .col-item:nth-child(4){
    width:20%;
  }
  .col-item:nth-child(5){
    width:20%;
  }

= javascript_include_tag  "https://kit.fontawesome.com/#{ENV['FONT_AWESOME']}.js"
.library-table
  %table.elbat{:id => table_dom_id,
    :use => 'true',
    :data => {:use => 'true',
      :side => 'client',
      :current_page => '0',
      :current_page_size => '10',
      :page_sizes => "10,20,50,100,200",
      :search => 'client',
      :export => "['csv', 'txt', 'excel']",
      :columns => "Object Key,drilldown-link,
                  Name,
                  Code,
                  Description,
                  Num Assets,",
        :selected_columns => "Object Key,
                  Name,
                  Code,
                  Description,
                  Num Assets",
      :cookies => "true",
      :sort => 'client',
      :params => "{}",
      :filter => "[]",
      :data_source => 'client',
      :url => ''}}
  - @asset_groups.each_with_index do |a, index|

    :javascript
      add_row('#{table_dom_id}',
      {
        "Object Key": '#{h link_to a.object_key }',
        "Name": '#{h a.name }',
        "Code": '#{h a.code }',
        "Description": '#{h a.description }',
        "Num Assets": '#{h format_as_integer(a.assets.count) }',
      }, #{index});




