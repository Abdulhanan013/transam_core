:ruby
  table_dom_id = SecureRandom.hex

%table.table.table-hover{:id => table_dom_id, :data => {:toggle => 'table',
  :card_view => "false",
  :pagination => 'true',
  :page_list => "[5, 10, 20, 50, 100, 200]",
  :page_size => current_user.num_table_rows,
  :show_pagination_switch => 'true',
  :search => 'false',
  :show_columns => 'true',
  :show_export => 'true',
  :show_toggle => 'true',
  :resizable => 'true',
  :search => 'false'}}
  %thead
    %tr
      %th.left Name
      %th.left Code
      %th.left Description
      %th.right Num Assets

  %tbody
    - @asset_groups.each do |a|
      %tr.popup-details{:data => {:action_path => asset_group_path(a)}}
        %td.left= a.name
        %td.left= a.code
        %td.left= a.description
        %td.right= format_as_integer(a.assets.count)


:javascript

  $(window).resize(function() {
    $("##{table_dom_id}").bootstrapTable('resetView');
  });
