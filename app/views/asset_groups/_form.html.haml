.row
  .col-md-6.col-md-offset-3
    %fieldset
      %legend New Asset Group

      = simple_form_for(@asset_group,
        :html => {:class => 'form-vertical'},
        :wrapper => :vertical_form,
        :wrapper_mappings => {:check_boxes => :vertical_radio_and_checkboxes,
        :radio_buttons => :vertical_radio_and_checkboxes,
        :file => :vertical_file_input,
        :boolean => :vertical_boolean}) do |f|

        = hidden_field_tag :use_cached_assets, @use_cached_assets

        .row
          .col-xs-12
            = f.input :name, :input_html => {:required => true, :maxlength => 64}

        .row
          .col-xs-4
            = f.input :code, :input_html => {:required => true, :maxlength => 8}

        .row
          .col-xs-12
            = f.input :description, :as => :text, :input_html => {:required => true}

        = f.button :submit, :class => 'btn btn-primary'


:javascript
  $('#new_asset_group').validate({
    submitHandler: function(form) {
      form.submit();
    }
  });
