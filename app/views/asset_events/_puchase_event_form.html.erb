<div class="row-fluid">
	<div class="span12">
		<%= simple_form_for([@asset, @asset_event], :as => :asset_event, :url => @asset_event.new_record? ? inventory_asset_events_path(@asset) : inventory_asset_event_path(@asset, @asset_event), :method => @asset_event.new_record? ? 'post' : 'put', :defaults => {:disabled => @disabled }, :html => {:class => 'form-horizontal' }) do |f| %>
			<%= hidden_field_tag :event_type, @asset_event.asset_event_type.id %>

			<ul class="thumbnails">
				<%= panel_tag('Purchase', {:icon => 'fa fa-refresh', :class => "span6 form_part"}) do %>
						
					<%= f.input :event_date, :label => 'Date of purchase', :wrapper => :append, :class => "inline"  do %>
						<%= f.input_field :event_date, :as => :string, :class => 'datepicker', :style => "margin-top:0", :disabled => @disabled %>
						<%= content_tag :span, :class => "add-on" do %><i class="icon-calendar"></i><% end %>
					<% end %>
					<%= f.input :purchase_cost, :label => 'Purchase Cost', :wrapper => :prepend, :class => "inline"  do %>
						<%= content_tag :span, :class => "add-on" do %><i class="fa fa-usd"></i><% end %>
						<%= f.input_field :purchase_cost, :style => "margin-top:0", :disabled => @disabled %>
					<% end %>	

					<%= f.input :comments, :input_html => { :class => "span12", :rows => 6 }, :placeholder => "Enter any additional comments..." %>
				<% end %>
				
				<%= panel_tag('Life Expectancy', {:icon => 'fa fa-refresh', :class => "span6 form_part"}) do %>
	
					<%= f.input :expected_useful_life %>
					<%= f.input :expected_useful_miles %>
				<% end %>
			</ul>
			
			<% if ! @disabled %>
			<div class="form-actions panel-form-actions">
				<%= f.button :submit, 'Update condition', :class => 'btn' %>
				<%= submit_tag 'Cancel', :name => 'cancel', :class=>"btn" %>
			</div>
			<% end %>
		<% end %>
	</div>
</div>	
