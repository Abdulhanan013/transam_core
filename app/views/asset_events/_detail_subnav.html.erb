<%= sub_nav_tag({}) do %>
  <li>
    <%= link_to inventory_path(@asset) do %>
			<i class="fa fa-angle-left"></i> Back
		<% end %>
	</li>
	<% if can? :update, @asset %>
  	<% if @asset_event && ! @asset_event.new_record? && ! current_page?(edit_inventory_asset_event_path(@asset, @asset_event))%>
      <li>
    	  <%= link_to edit_inventory_asset_event_path(@asset, @asset_event) do %>
        <i class="fa fa-edit"></i> Update 
  		  <% end %>
  	  </li>
      <li>
    	  <%= link_to inventory_asset_event_path(@asset, @asset_event), :method => :delete, :data => {:confirm => "Are you sure you want to remove this event?"} do %>
			 <i class="fa fa-times"></i> Remove
		    <% end %>
  	  </li>
	  <% end %>  	
	<% end %>  		
<% end %>
