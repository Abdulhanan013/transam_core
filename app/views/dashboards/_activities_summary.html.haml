:ruby
  activities = Activity.where("organization_type_id IN (?)", [0, @organization.organization_type.id])

%fieldeset
  %legend Activities

  .panel.panel-default
    - if activities.empty?
      .panel-body
        %p= "No upcoming activities."
    - else
      %ul.list-group
        - activities.each do |act|
          = render :partial => "dashboards/activity_detail", locals: {:activity => act}
