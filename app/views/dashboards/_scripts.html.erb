<script type="text/javascript">

	google.load("visualization", "1", {
    	packages : ["corechart"]
  	});
    
	function create_charts() {
    	<% Report.show_in_dashboard.each do |report| %>
    	transam.load_ajax_panel('<%= "report_#{report.id}" %>', "<%= load_report_path(report) %>", "get", "<%= raw loader_panel_tag() %>");
    	<% end %>  
  	};
	function draw_charts() {
    	<% Report.show_in_dashboard.each do |report| %>
    	<%= "chart_func_#{report.id}" %>();
    	<% end %>  
  	};
  
  	$(document).ready(function() {
    	create_charts();
  	});

	// Handle the resize event and make sure the charts are redrawn for the new size
	window.onresize = function() {
    	draw_charts();
	};
        
</script>


