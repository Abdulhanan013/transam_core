<%= render 'subnav' %>

<div class="row">
	<div class="col-md-8">
		<%= dialog_tag(@attachment.name, {:icon => 'fa fa-picture-o', :class => "header_part"}) do %>
			<%= image_tag @attachment.image_url, :class => "img-polaroid" %>
		<% end %>
	</div>
	<div class="col-md-4">
		<%= dialog_tag('Details', {:icon => 'fa fa-file', :class => "header_part"}) do %>
			<%= format_field("File Name", @attachment.original_filename ) %>
			<%= format_field("Content", @attachment.attachment_type.name ) %>
			<%= format_field("Upload Time", format_as_date_time(@attachment.created_at) ) %>
			<%= format_field("Uploaded By", link_to(@attachment.creator.name, user_path(@attachment.creator)) ) %>
			<%= format_field("Notes", @attachment.notes.html_safe ) unless @attachment.notes.blank? %>
		<% end %>
	</div>
</div>
