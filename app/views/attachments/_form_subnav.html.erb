<%= sub_nav_tag({}) do %>
	<% if @attachment.nil? %>
    <li>
      <%= link_to inventory_attachments_path(@asset) do %> 
        <i class="fa fa-angle-left"></i> Back
      <% end %>
    </li>
  <% elsif @attachment.new_record? %>
    <li>
      <%= link_to :back do %>
        <i class="fa fa-angle-left"></i> Back
      <% end %>
    </li>
  <% else %>
    <li>
      <%= link_to inventory_attachment_path(@asset, @attachment) do %> 
        <i class="fa fa-angle-left"></i> Back
      <% end %>
    </li>
  <% end %>
<% end %>
