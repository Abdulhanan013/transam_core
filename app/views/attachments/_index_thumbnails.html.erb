<div class="row-fluid">
	<div class="span12">
		<h4>Photos</h4>
		<ul class="thumbnails">
			<% @attachments.each do |attachment| %>
				<% if attachment.attachment_type.name == "Photo" %>
					<li class="span2 thumbnail div_thumbnail">
						<%= image_thumbnail_tag({:icon => "icon-file", :title => attachment.name, :path => inventory_attachment_path(@asset, attachment)}) do %>
							<%= image_tag attachment.file.url(:thumb), :class => "img-polaroid" if attachment.file  %>
						<% end %>
					</li>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<h4>Documents</h4>
		<ul class="thumbnails">
			<% @attachments.each do |attachment| %>
				<% if attachment.attachment_type_id  != 1 %>
					<li class="span3 thumbnail div_thumbnail">
						<%= action_thumbnail_tag({:icon => "icon-file", :title => attachment.name, :path => inventory_attachment_path(@asset, attachment)}) do %>
							<%= image_tag attachment.file if attachment.file  %>
						<% end %>
					</li>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>
<script type="text/javascript">

	fix_thumbnail_margins(3);

</script>
