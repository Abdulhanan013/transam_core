<div class="row-fluid">
	<div class="span12">
		<h4>Photos</h4>
		<ul class="thumbnails">
			<% @attachments.each do |attachment| %>
				<% if attachment.attachment_type.name == "Photo" %>
					<%= image_thumbnail_tag({:class => 'span2', :icon => "fa fa-file", :title => attachment.name, :path => inventory_attachment_path(@asset, attachment)}) do %>
						<%= image_tag attachment.file.url(:thumb), :class => "img-polaroid" if attachment.file  %>
					<% end %>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<h4>Documents</h4>
		<ul class="thumbnails">
			<% @attachments.each do |attachment| %>
				<% if attachment.attachment_type_id  != 1 %>
					<%= action_thumbnail_tag({:class => 'span3', :icon => "fa fa-file", :title => attachment.name, :path => inventory_attachment_path(@asset, attachment)}) do %>
						<%= image_tag attachment.file if attachment.file  %>
					<% end %>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>
<script type="text/javascript">

	fix_thumbnail_margins(3);

</script>
