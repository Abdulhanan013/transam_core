<%= render 'subnav' %>

<div class="row-fluid">
	<div class="span12">
		<ul class="thumbnails">
			<%= panel_tag('Details', {:icon => 'fa fa-map-marker', :class => "span6 header_part"}) do %>
				<%= format_field("Name", @location.name ) %>
				<%= format_field("Type", @location.location_type ) %>
				<%= format_field("Asset Count", @location.assets.count ) %>
			<% end %>
			<%= panel_tag('Address', {:icon => 'fa fa-building-o', :class => "span6 header_part"}) do %>
				<%= format_field("Address", format_as_address(@location) ) %>
			<% end %>
		</ul>
	</div>
</div>
<%= render 'scripts' %>
