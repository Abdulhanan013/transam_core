<div class="row-fluid">
	<div class="span12">
		<ul class="thumbnails">
			<% @locations.each do |loc| %>
				<%= action_thumbnail_tag({:class => 'span3', :icon => "fa fa-map-marker", :title => loc.name, :path => location_path(loc)}) do %>
					<%= content_tag "address" do %>
						<%= format_as_address(loc) %>
					<% end %>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>

<script type="text/javascript">

	$(document).ready(function() {
		
		transam.fix_thumbnail_margins(3);
		
	});
		
</script>
