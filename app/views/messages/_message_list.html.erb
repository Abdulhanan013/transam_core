<div class="row">
	<div class="col-md-12">
		<table id="datatable" class="table table-hover">
			<thead>
				<th class="left">Priority</th>
				<th class="left">Subject</th>
				<th class="left">From</th>
				<th class="left">Sent</th>
				<th class="left">Responses</th>
			</thead>
			<tbody>
				<% @messages.each do |m| %>
					<%= content_tag "tr", :data => {:action_path => user_messages_path(current_user, :filter => MessagesController::MESSAGE_TYPE_NEW, :msg => m) } do %>
						<td class="left"><%= m.priority_type.name %></td>
						<td class="left"><%= m.subject %></td>
						<td class="left"><%= m.user.name %></td>
						<td class="left"><%= format_as_date_time(m.created_at) %></td>
						<td class="center"><%= m.response_count %></td>
					<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
