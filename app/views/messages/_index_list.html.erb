<div class="row-fluid">
	<div class="span12">
		<table id="datatable" class="table table-condensed table-striped table-hover table-bordered">
			<thead>
				<th class="left">Priority</th>
				<th class="left">Subject</th>
				<% if @filter == MessagesController::MESSAGE_TYPE_SENT %>
				<th class="left">Recipient</th>
				<% else %>
				<th class="left">From</th>
				<% end %>
				<th class="left">Sent</th>
				<th class="left">Responses</th>
			</thead>
			<tbody>
				<% @messages.each do |m| %>
					<%= content_tag "tr", :onclick => "load_message(this)", :data => {:url => user_message_path(current_user, m) } do %>
						<td class="left"><%= m.priority_type.name %></td>
						<td class="left"><%= m.subject %></td>
						<% if @filter == MessagesController::MESSAGE_TYPE_SENT %>
						<td class="left"><%= m.to_user.name %></td>
						<% else %>
						<td class="left"><%= m.user.name %></td>
						<% end %>
						<td class="left"><%= format_as_date_time(m.created_at) %></td>
						<td class="center"><%= m.response_count %></td>
					<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
