<div class="row-fluid">
	<div class="span12">
		<div class="navbar">
			<div class="navbar-inner">
				<ul class="nav">
					<li>
						<%= link_to back_inventory_index_path do %> <i class="fa fa-angle-left"></i> Back
						<% end %>
					</li>
					<% if can? :update, @asset %>
						<li>
							<%= link_to  new_inventory_note_path(@asset) do %> <i class="fa fa-paperclip"></i> Add Note
							<% end %>
						</li>
					<% end %>
					<li>
						<%= link_to  inventory_asset_events_path(@asset) do %> <i class="fa fa-calendar"></i> History (<%= @asset.asset_events.length %>)
						<% end %>
					</li>
					<li>
						<%= link_to  inventory_attachments_path(@asset) do %> <i class="fa fa-file"></i> Attachments (<%= @asset.attachments.length %>)
						<% end %>
					</li>
					<% if can? :update, @asset %>
						<li>
							<%= link_to edit_inventory_path(@asset) do %> <i class="fa fa-edit"></i> Update
							<% end %>
						</li>
					<% end %>
					<% if can? :create, Asset %>
						<li>
							<%= link_to copy_inventory_path(@asset) do %> <i class="fa fa-copy"></i> Copy
							<% end %>
						</li>
					<% end %>
					<% if can? :delete, Asset %>
						<li>
							<%= link_to inventory_path(@asset), :title => "Remove the asset?", :method => :delete, :data => {:confirm => "Are you sure you want to remove this asset?"} do %> 
								<i class="fa fa-times"></i> Remove
							<% end %>
						</li>
					<% end %>

					<li>
						<% if @prev_asset_id %>
							<%= link_to inventory_path(@prev_asset_id) do %>
								<i class="fa fa-angle-left"></i> Prev
							<% end %>
						<% else %>
							<%= link_to '#', :disabled => true do %>
								<i class="fa fa-angle-left"></i> Prev
							<% end %>
						<% end %>
					</li>
					<li>
						<% if @next_asset_id %>
							<%= link_to inventory_path(@next_asset_id) do %>
								<i class="fa fa-angle-right"></i> Next
							<% end %>
						<% else %>
							<%= link_to '#', :disabled => true do %>
								<i class="fa fa-angle-right"></i> Next
							<% end %>
						<% end %>
					</li>
				</ul>
				<% if can? :update, @asset %>
					<%= form_tag new_inventory_asset_event_path(@asset), :id => 'asset_action_form', :method => "get", :class => 'navbar-form pull-right form-inline' do %>
					<div class="input-append span2">
						<%= select_tag(:event_type, options_for_select(AssetEventType.all.collect{|a| [a.name, a.id]}), :class => "inline", :style => "margin-top:0;", :prompt => 'Add Event...') %>
						<button class="btn" type="submit" id="submit_button">
							Add
						</button>
					</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
