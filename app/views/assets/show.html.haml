.row
  .col-sm-12.col-md-3.col-lg-2
    .panel.panel-default
      .panel-heading
        .row
          .col-sm-6
            %h3.panel-title
              %i.fa.fa-star
              = @asset.asset
          .col-sm-6
            = render 'actions'
      .panel-body
        = render :partial => 'summary', :locals => {:asset => @asset}

  .col-sm-12.col-md-9.col-lg-10#details
    = render 'details'
