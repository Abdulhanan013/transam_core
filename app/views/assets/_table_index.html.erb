
<div class="row-fluid">
	<div class="span12">
		<table id="datatable" class="table table-condensed table-striped table-hover table-bordered">
			<thead>
				<tr>
					<th class="center" colspan="3">Asset</th>
					<th class="center" colspan="3">Sign Characteristics</th>
					<th class="center" colspan="3">Post Characteristics</th>
					<th class="center" colspan="4">Condition</th>
				</tr>

				<tr>
					<th class="center">Type</th>
					<th class="center">Tag</th>					
					<th class="center">Disposition</th>
					
					<th class="center">Message</th>
					<th class="center">Sheeting</th>
					<th class="center">Blank</th>
					
					<th class="center">Type</th>
					<th class="center">Size</th>
					<th class="center">Count</th>

					<th class="center">Age</th>
					<th class="center">Install Date</th>
					<th class="center">Reported</th>
					<th class="center">Estimated</th>
					
				</tr>
			</thead>
			<tbody>
				<% @assets.each do |a| %>
					<tr data-action-path = '<%= inventory_path(a) %>'>
						<td class="left"><%= a.asset_subtype.name %></td>
						<td class="left"><%= a.asset_tag %></td>
						<td class="center"><%= a.last_reported_disposition_type.code unless a.last_reported_disposition_type.nil? %></td>
						
						<td class="left"><%= a.sign_message %></td>
						<td class="left"><%= a.sign_sheeting_type.name %></td>
						<td class="left"><%= a.sign_blank_type.name %></td>
						
						<td class="left"><%= a.post_type.name %></td>
						<td class="left"><%= a.post_size_type.name %></td>
						<td class="right"><%= a.post_count %></td>

						<td class="right"><%= a.age %></td>
						<td class="right"><%= format_date(a.install_date) %></td>
						<td class="center"><%= a.last_reported_condition_type.name unless a.last_reported_condition_type.nil? %>
						<td class="center"><%= a.estimated_condition_type.name unless a.estimated_condition_type.nil? %>
						<br/>
						<%= number_with_precision(a.estimated_condition_rating, :precision => 2) %></td>
						
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<%= render 'shared/datatable_javascript' %>
