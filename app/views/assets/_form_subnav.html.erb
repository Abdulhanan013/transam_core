<div class="row-fluid">
	<div class="span12">
		<div class="navbar">
			<div class="navbar-inner">
				<ul class="nav">
					<% if @asset.nil? || @asset.new_record? %>
					<li>
						<%= link_to :back do %>
						<i class="fa fa-angle-left"></i> Back
						<% end %>
					</li>
					<li>
						<%= link_to inventory_index_path do %>
						<i class="fa fa-ban-circle"></i> Cancel
						<% end %>
					</li>
					<% else %>
					<li>
						<%= link_to inventory_path(@asset) do %>
						<i class="fa fa-angle-left"></i> Back
						<% end %>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>
