<div class="row-fluid">
	<div class="span6">
		<%= render @view %>
	</div>
	<div class="span6">
		<%= LeafletMap({ :mapid => 'lmap', :markers => @markers, :tile_provider => get_tile_provider, :min_zoom => 10, :max_zoom => 18, :class => "map", :style => "height:600px;" }) %>
	</div>
</div>

<%= render '/shared/datatable_javascript' %>
<%= yield :scripts %>

<script type="text/javascript" charset="utf-8">
  // Install a hover event handler for my places. When hovering,
  // the map icon is panned to and the popup shown
  $('.place-select').hover(function() {
    var id = $(this).data('id');
    selectMarkerById(id);
  });

</script>