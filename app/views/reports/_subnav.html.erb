<div class="row">
	<div class="col-md-12">
		<nav class="navbar navbar-default" role="navigation">
			<div class="container-fluid">
				<ul class="nav navbar-nav">
					<li>
						<%= link_to :back do %> 
						<i class="fa fa-angle-left"></i> Back
						<% end %>
					</li>
					<li>
						<%= form_tag report_url(@report), :id => 'asset_filter_form', :method => "get", :class => 'navbar-form navbar-left' do %>
						<div class="input-prepend">
							<span class="add-on">Filter</span>
							<%= select_tag(:report_filter_type, options_for_select(@asset_types, :selected => @report_filter_type), :class => "form-control", :prompt => 'All', :id => 'asset_filter') %>
						</div>
						<% end %>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">				
					<li>
						<a data-toggle="collapse" class="navbar-right" data-parent="accordion" href="#chart-div"><i class="fa fa-toggle-down"></i> Toggle Chart</a>
					</li>
				</ul>
			</div>
		</nav>
	</div>
</div>

<script type="text/javascript" charset="utf-8">

	$(document).ready(function() {
		
		$('#asset_filter').change(function() {
			$('#asset_filter_form').submit();
		});
	
	});

</script>
