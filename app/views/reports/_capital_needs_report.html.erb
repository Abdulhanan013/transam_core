
<div class="row-fluid">
	<div class="well well-small span12">
		<div id='<%= "chart_#{@report.id}" %>'></div>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<table id="datatable" class="table table-condensed table-striped table-hover table-bordered">
			<thead>
				<tr>
					<th class="center">Year</th>
					<th class="center">Asset Count</th>
					<th class="center">Total</th>
				</tr>
			</thead>
			<tbody>
				<% total_cost = 0 %>
				<% count = 0 %>
				<% @data.each_value do |row| %>
				<tr data-action-path = '<%= inventory_index_path(:ids => list_to_delimited_string(row.id_list)) %>'>
					<td class="left"><%= row.key %></td>
					<td class="right"><%= row.count %></td>
					<td class="right"><%= format_as_currency(row.replacement_cost) %></td>
				</tr>
				<% count += row.count %>				
				<% total_cost += row.replacement_cost %>
				<% end %>
			</tbody>
			<tfoot>
				<tr>
					<th colspan="1"></th>
					<th class="right"><%= count %></th>
					<th class="right"><%= format_as_currency(total_cost) %></th>
				</tr>
			</tfoot>

		</table>
	</div>
</div>

<%= render 'shared/datatable_javascript' %>

<script type="text/javascript">

	google.load('visualization', '1.0', {'packages':['corechart']});

	function <%= "chart_func_#{@report.id}" %>() {
		
		var div_id = '<%= "chart_#{@report.id}" %>';

		var chart_data = new google.visualization.DataTable();
		chart_data.addColumn('string', 'Asset Type');	
		chart_data.addColumn('number', '($)');
		<% @data.each_value do |row| %>
			chart_data.addRow(['<%= row.key %>', {v: <%= row.replacement_cost.to_i %>, f: '<%= format_as_currency(row.replacement_cost) %>'}]);
		<% end %>
		
		var chart_options = {
			is3D : true,
			height : 300,
			legend : {position : 'none'},
			vAxis :  {title : '($)'}
		};
		transam.draw_chart(div_id, 'column', chart_options, chart_data);		
	};
	
	// Set a callback to run when the Google Visualization API is loaded.
	google.setOnLoadCallback(<%= "chart_func_#{@report.id}" %>);

	// Handle the resize event and make sure the chart is redrawn for the new size
	window.onresize = function() {
		<%= "chart_func_#{@report.id}" %>();
	};
		
</script>

