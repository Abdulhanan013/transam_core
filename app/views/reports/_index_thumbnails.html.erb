<div class="row-fluid">
	<div class="span12">
		<ul class="thumbnails">	
			<% @reports.each do |report| %>
				<li class="span3 thumbnail div_thumbnail">
					<%= action_thumbnail_tag({:icon => "fa fa-bar-chart", :title => report.name, :path => report_path(report) }) do %>
						<%= content_tag "p" do %>
							<%= report.description %>
						<% end %>
					<% end %>
				</li>
			<% end %>
		</ul>
	</div>
</div>

<script type="text/javascript">

	$(document).ready(function() {
		
		transam.fix_thumbnail_margins(3);
		
	)};
	
</script>
    