- if @search_type
  .btn-group{:role => 'group'}
    = link_to reset_searches_path(search_type: @search_type.id ), :role => 'button', :class => 'btn btn-default' do
      = "New #{@search_type} Query"
- else
  - SearchType.active.each do |search_type|
    - view_component = "#{search_type.class_name.underscore}_button"
    - if lookup_context.template_exists?(view_component, 'searches', true)
      = render :partial => "searches/#{view_component}"
    - else
      .btn-group{:role => 'group'}
        = link_to reset_searches_path(search_type: search_type.id ), :role => 'button', :class => 'btn btn-default' do
          = "New #{search_type} Query"