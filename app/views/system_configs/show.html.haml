.row
  .col-md-3
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-6
            %h3.panel-title
              %i.fa.fa-info
              System Config
          .col-md-6
      .panel-body
        = format_field('Start of Fiscal Year', @system_config.start_of_fiscal_year)
        = format_field('Fiscal Year Formatter', @system_config.default_fiscal_year_formatter.nil? ? 'Fiscal Year (FY XX-YY)' : @system_cnfig.default_fiscal_year_formatter.humanize.titleize)

  .col-md-9
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-12
            %h3.panel-title
              %i.fa.fa-folder-open
              Details

      .panel-body
        %ul.nav.nav-tabs
          %li
            %a{:href => "#desc", :data =>{:toggle => 'tab'}}
              = "Description"

        .tab-content
          .tab-pane.fade#desc
            .tab-content
              TBD

.modal.fade#form-modal{:tabindex => -1, :role => 'dialog', :aria => {:hidden => true}}
