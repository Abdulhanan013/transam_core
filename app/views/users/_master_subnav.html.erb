<div class="row">
	<div class="col-md-12">
		<nav class="navbar navbar-default" role="navigation">
			<div class="container-fluid">
				<ul class="nav navbar-nav">

					<li class="<%= get_nav_link_class('users', UsersController::SESSION_VIEW_TYPE_VAR, UsersController::VIEW_TYPE_LIST) %>">
						<%= link_to users_path(:view_type => UsersController::VIEW_TYPE_LIST) do %>
							<i class="fa fa-th-large"></i> List View
						<% end %>
					</li>
					<li class="<%= get_nav_link_class('users', UsersController::SESSION_VIEW_TYPE_VAR, UsersController::VIEW_TYPE_TABLE) %>">
						<%= link_to users_path(:view_type => UsersController::VIEW_TYPE_TABLE) do %>
							<i class="fa fa-list-alt"></i> Table View
						<% end %>
					</li>
					<% if can? :create, User %>
						<li>
							<%= link_to new_user_path do %>
								<i class="fa fa-plus"></i> Add User
							<% end %>
						</li>
					<% end %>
				</ul>
				<%= form_tag users_path, :id => 'search_form', :method => "get", :role => "search", :class => 'navbar-form navbar-right' do %>
					<div class="input-group" style="width:300px;">
						<div class="input-group-btn search-panel">
				            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
				            	<span id="search_concept"><%= @search_param.blank? ? "Filter by" : @search_param %></span> <span class="caret"></span>
				            </button>
				            <ul class="dropdown-menu" role="menu">
				              <li><a href="#equals">Equals</a></li>
				              <li><a href="#contains">Contains</a></li>
				              <li><a href="#starts_with">Starts With</a></li>
				              <li><a href="#ends_with">Ends With</a></li>
				            </ul>
			            </div>
        				<input type="hidden" name="search_param" value="<%= @search_param %>" id="search_param">         
						<%= text_field_tag :search_text, @search_text, :class => "form-control", :placeholder => "Filter text..."%>
			            <span class="input-group-btn">
							<button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
						</span>
					</div>
				<% end %>
			</div>
		</nav>
	</div>
</div>
