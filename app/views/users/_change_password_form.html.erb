<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= simple_form_for(@user, :url => update_password_user_path(@user), :html => {:class => 'form-horizontal' }) do |f| %>
		<ul>
			<%= dialog_tag('Password', {:icon => 'fa fa-key', :class => "form_part"}) do %>
				<%= f.input :password, :label => "New password", :autocomplete => "off" %>
				<%= f.input :password_confirmation, :label => "Re-enter new password" %>
				<%= f.input :current_password, :label => "Current password" %>
			<% end %>
		</ul>
		<div class="form-actions col-md-9 col-md-offset-5">
			<%= f.button :submit %>
			<%= submit_tag 'Cancel', :name => 'cancel', :class=>"btn" %>
		</div>
		<% end %>
	</div>
</div>

