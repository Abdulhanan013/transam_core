<div class="row-fluid">
	<div class="span12">
		<table id="datatable" class="table table-condensed table-striped table-hover table-bordered">
			<thead>
				<th>Organization</th>
				<th>First</th>
				<th>Last</th>
				<th>e-mail</th>
				<th>Phone</th>
				<th>Roles</th>
				<th>Created</th>
				<th>Last Login</th>
			</thead>
			<tbody>
				<% @users.each do |u| %>
				<tr data-action-path = '<%= user_path(u) %>'>
					<td><%= u.organization.name %></td>
					<td><%= u.first_name %></td>
					<td><%= u.last_name %></td>
					<td><%= u.email %></td>
					<td><%= number_to_phone(u.phone) %></td>
					<td><%= u.roles.first.name.titleize unless u.roles.first.nil? %></td>
					<td><%= format_date_time(u.created_at) %></td>
					<td><%= format_date_time(u.last_sign_in_at) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<%= render 'shared/datatable_javascript' %>
