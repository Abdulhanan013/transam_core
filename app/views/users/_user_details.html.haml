.row
  .col-xs-12
    = render :partial => "users/user_card", :locals => {:user => user}
.row
  .col-xs-12
    = format_field("Primary Phone", format_as_phone_number(user.phone) )
    = format_field("External ID", user.external_id )
    - if current_user.has_role? :admin
      = format_field("Roles", format_as_list(user.roles) )
    - unless user.contact_types.empty?
      = format_field("Contact Types", format_as_list(user.contact_types))