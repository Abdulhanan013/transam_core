.btn-group.pull-right.panel-action{:style => 'margin-left: 5px;'}
  %button.btn.btn-primary.btn-sm.dropdown-toggle{:data => {:toggle => 'dropdown'}}
    Actions
    %span.caret
  %ul.dropdown-menu{:role => 'menu'}
    %li
      = link_to new_user_path do
        %i.fa.fa-fw.fa-user
        = " Add a user"
    %li.divider
    %li
      = link_to new_upload_path do
        %i.fa.fa-fw.fa-file-excel-o
        = " Export to Excel"

= form_tag users_path, :id => 'filter_form', :method => "get", :class => 'navbar-form navbar-right panel-action' do
  - if @organization_list.count > 1
    .form-group
      = select_tag(:organization_id, options_for_select(Organization.all.collect{|a| [a.coded_name, a.id]}, :selected => @organization_id), :class => "form-control", :prompt => "Any organization...")

  - if current_user.has_role? :admin
    .form-group
      = select_tag(:role, options_for_select(Role.all, :selected => @role), :class => "form-control", :prompt => "Any role...")


:javascript
  $(document).ready(function() {

    $('#organization_id, #role').change(function() {
      $('#filter_form').submit();
    });

  });
