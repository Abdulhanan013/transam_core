:ruby
  table_dom_id = SecureRandom.hex

%table.table.table-hover{:id => table_dom_id, :data => {:toggle => 'table',
  :card_view => "false",
  :pagination => 'true',
  :page_list => "[5, 10, 20, 50, 100, 200]",
  :page_size => current_user.num_table_rows,
  :show_pagination_switch => 'true',
  :search => 'false',
  :show_columns => 'true',
  :show_export => 'true',
  :show_toggle => 'true',
  :resizable => 'true',
  :search => 'false'}}
  %thead
    %tr
      %th.left Organization
      %th.left First
      %th.left Last
      %th.left Email
      %th.left Phone
      %th.center

  %tbody
    - @users.each do |u|
      %tr.popup-details{:data => {:action_path => user_path(u)}}
        %td= u.organization.short_name
        %td= u.first_name
        %td= u.last_name
        %td= u.email
        %td= format_as_phone_number(u.phone)
        %td.center
          %i.fa.fa-info-circle.text-info.popup-details{:data => {:title => "#{u.name}", :content => "#{raw render :partial => 'users/summary', :locals => {:user => u}}"}}

:javascript

  $(window).resize(function() {
    $("##{table_dom_id}").bootstrapTable('resetView');
  });
