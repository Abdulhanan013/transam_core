<div class="row">
	<%= simple_form_for(@user, :html => {:class => 'form-vertical' }, :wrapper => :vertical_form, :wrapper_mappings => {:boolean => :vertical_boolean}) do |f| %>
		<div class="col-md-6">
			<%= dialog_tag('User', {:icon => 'fa fa-user', :class => "form_part"}) do %>
				<%= f.input :first_name, :placeholder => "User's first name...", :label => "First Name" %>
				<%= f.input :last_name, :placeholder => "User's last name...", :label => "Last Name" %>
				<%= f.input :email, :as => :email, :placeholder => "User's business email address..." %>
				<%= f.input :phone, :as => :tel, :placeholder => "Users primary phone number..." %>
				<%= f.input :external_id, :placeholder => "External ID..." %>
				<%= f.input :timezone, :as => :time_zone, priority: /US/, :prompt => "Select timezone..." %>
			<% end %>
		</div>

		<div class="col-md-6">
			<%= dialog_tag('System Configuration', {:icon => 'fa fa-cog', :class => "form_part"}) do %>
				<%= f.input :notify_via_email, :label => "Notify via Email" %>
				<%= f.association :user_organization_filter, UserOrganizationFilter.where('user_id IN (?)', [system_user.id, current_user.id]), :label => "Default organization filter" %>
				<%= f.input :num_table_rows, :collection => [5,10,15,20,25,50,100], :include_blank => false, :label => "Number of table rows to display" %>
			<% end %>
		</div>
		<div class="col-md-12">
			<%= f.button :submit, :class => "btn btn-primary" %>
		</div>
	<% end %>
</div>

