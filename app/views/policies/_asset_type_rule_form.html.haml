= simple_form_for(@rule,
  :url => update_policy_rule_policy_path(@policy),
  :remote => true,
  :html => {:class => 'form-vertical', :autocomplete => 'off', :id => 'edit-form'},
  :wrapper => :vertical_form,
  :wrapper_mappings => {:check_boxes => :vertical_radio_and_checkboxes,
  :radio_buttons => :vertical_radio_and_checkboxes,
  :file => :vertical_file_input,
  :boolean => :vertical_boolean}) do |f|

  -if @rule.id
    = f.input :id, :as => :hidden, :input_html => { :value => @rule.id }

  .row
    .col-xs-6
      = f.association :service_life_calculation_type

    .col-xs-6
      = f.association :replacement_cost_calculation_type

    .col-xs-4
      = f.input :annual_inflation_rate, :input_html => {:min => 0, :max => 100}

    .col-xs-4
      = f.input :pcnt_residual_value, :input_html => {:min => 0, :max => 100}

  .row
    = f.button :submit, "Update", :class => 'btn btn-primary'
    %button.btn.btn-default{:data => {:dismiss => "modal"}} Cancel

:javascript

  // validate the form before submittal
  $('#edit-form').validate({
    submitHandler: function(form) {
      // Show the spinner while the form request is being handled
      $("#spinner").show();
      $(form).ajaxSubmit();
    }
  });
  $('#policy_asset_type_rule_service_life_calculation_type_id').rules("add", {
    required: true
  });

  $('#policy_asset_type_rule_replacement_cost_calculation_type_id').rules("add", {
    required: true
  });

  $('#policy_asset_type_rule_annual_inflation_rate').rules("add", {
    required: true
  });

  $('#policy_asset_type_rule_pcnt_residual_value').rules("add", {
    required: true
  });
