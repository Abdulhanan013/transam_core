<%= subnav_tag do %>
	<%= subnav_elem_tag do %>
		<%= link_to :back do %> 
		<i class="icon-angle-left"></i> Back
		<% end %>
	<% end %>
	<% if current_user.organization.id == @organization.id %>
		<%= subnav_elem_tag do %>
			<%= link_to edit_policy_path(@policy) do %> <i class="icon-edit"></i> Update <% end %>
		<% end %>
		<%= subnav_elem_tag do %>
			<%= link_to rules_policy_path(@policy) do %> <i class="icon-tasks"></i> Manage Rules <% end %>
		<% end %>
		<%= subnav_elem_tag do %>
			<%= link_to policy_path(@policy), :disabled => @policy.active, :method => :delete, :confirm => "Are you sure?. The action cannot be undone!." do %> <i class="icon-remove"></i> Remove <% end %>
		<% end %>
	<% end %>
	<%= subnav_elem_tag do %>
		<%= link_to copy_policy_path(@policy) do %> <i class="icon-copy"></i> Copy <% end %>
	<% end %>
	<%= subnav_elem_tag do %>
		<%= form_tag policy_url(@policy), :id => 'filter_form', :method => "get", :class => 'navbar-form form-inline pull-right' do %>
		<div class="input-prepend">
			<span class="add-on">Filter</span>
			<%= select_tag(:asset_subtype, option_groups_from_collection_for_select(@asset_types, :asset_subtypes, :name, :id, :name, :selected => @asset_subtype), :style => 'margin-top:0px', :prompt => 'All', :id => 'asset_filter') %>
		</div>
		<% end %>
	<% end %>
<% end %>

<script type="text/javascript" charset="utf-8">
	// Add a listener on the asset type filter that submits the form when changed
	$('#asset_filter').change(function() {
		$('#filter_form').submit();
	});

</script>
