<%= subnav_tag do %>
	<%= subnav_elem_tag do %>
		<%= link_to :back do %> 
		<i class="fa fa-angle-left"></i> Back
		<% end %>
	<% end %>
	<% if current_user.organization.id == @organization.id %>
		<%= subnav_elem_tag do %>
			<%= link_to edit_policy_path(@policy) do %> <i class="fa fa-edit"></i> Update <% end %>
		<% end %>
		<%= subnav_elem_tag do %>
			<%= link_to policy_path(@policy), :disabled => @policy.active, :method => :delete, :confirm => "Are you sure?. The action cannot be undone!." do %> <i class="icon-remove"></i> Remove <% end %>
		<% end %>
	<% end %>
	<%= subnav_elem_tag do %>
		<%= link_to copy_policy_path(@policy) do %> <i class="fa fa-copy"></i> Copy <% end %>
	<% end %>
<% end %>
