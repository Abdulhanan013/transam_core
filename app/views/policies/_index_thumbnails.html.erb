<div class="row-fluid">
	<div class="span12">
		<ul class="thumbnails">
			<% @policies.each do |policy| %>
				<%= action_thumbnail_tag({:class => 'span3', :icon => "fa fa-book", :title => policy.name, :path => policy_path(policy)}) do %>
					<p><%= policy.description %></p>
					<h5>Current? <%= format_as_boolean(policy.current) %></h5>		
				<% end %>
			<% end %>
		</ul>
	</div>
</div>

<script type="text/javascript">

	$(document).ready(function() {
		
		transam.fix_thumbnail_margins(3);
		
	});
		
</script>
