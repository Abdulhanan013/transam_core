<div class="row-fluid">
	<div class="span12">
		<table id="datatable" class="table table-condensed table-striped table-hover table-bordered control-group" style="margin-top:0px;">
			<thead>
				<tr>
					<th colspan="3" class="center">Asset</th>
					<th colspan="1" class="center">Service Life</th>
					<th colspan="2" class="center">Replacement Cost</th>
				</tr>
				<tr>
					<th class="left">Type</th>
					<th class="left">Sheeting</th>
					<th class="left">Post Type</th>
					<th class="right">Years</th>
					<th class="right">Low</th>
					<th class="right">High</th>
				</tr>
			</thead>
			<tbody>
				<% @policy_items.each do |pi| %>
				<% if render_links %>
				<tr data-action-path = '<%= rules_policy_path(@policy, :policy_item => pi) %>'>
					<% else %>
				<tr>
					<% end %>
					<td class="left"><%= pi.asset_subtype.name %></td>
					<td class="left"><%= pi.sign_sheeting_type.name %></td>
					<td class="left"><%= pi.post_type.name %></td>
					<td class="right"><%= pi.life_years %></td>
					<td class="right"><%= format_as_currency(pi.replacement_cost_low) %></td>
					<td class="right"><%= format_as_currency(pi.replacement_cost_high) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<%= render 'shared/datatable_javascript' %>
