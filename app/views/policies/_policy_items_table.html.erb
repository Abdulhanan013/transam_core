<div class="row-fluid">
	<div class="span12">
		<table id="datatable" class="table table-condensed table-striped table-hover table-bordered control-group" style="margin-top:0px;">
			<thead>
				<tr>
					<th colspan="2" class="center">Asset</th>
					<th colspan="2" class="center">Service Life</th>
					<th colspan="1" class="center">Replacement Cost</th>
				</tr>
				<tr>
					<th class="left">Class</th>
					<th class="left">Subclass</th>
					<th class="right">Years</th>
					<th class="right">Miles</th>
					<th class="right">$</th>
				</tr>
			</thead>
			<tbody>
				<% @policy_items.each do |pi| %>
				<tr>
					<td class="left"><%= pi.asset_subtype.asset_type.name %></td>
					<td class="left"><%= pi.asset_subtype.name %></td>
					<td class="right"><%= pi.max_life_years %></td>
					<td class="right"><%= pi.max_life_miles %></td>
					<td class="right"><%= format_as_currency(pi.replacement_cost) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<%= render 'shared/datatable_javascript' %>
