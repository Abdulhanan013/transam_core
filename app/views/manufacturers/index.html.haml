:ruby
  table_dom_id = SecureRandom.hex

%table.table.table-hover{:id => table_dom_id, :data => {:toggle => 'table',
  :card_view => "false",
  :pagination => 'true',
  :page_list => "[5, 10, 20, 50, 100, 200]",
  :page_size => current_user.num_table_rows,
  :show_pagination_switch => 'true',
  :search => 'false',
  :show_columns => 'true',
  :show_export => 'true',
  :show_toggle => 'true',
  :resizable => 'true',
  :search => 'false'}}
  %thead
    %tr
      %th.left Name
      %th.left Code
      %th.left Type
      %th.right Count

  %tbody
    - @manufacturers.each do |m|
      %tr{:data => {:action_path => inventory_index_path(:manufacturer_id => m.id)}}
        %td.left= m.name
        %td.left= m.code
        %td.left= m.filter
        %td.right= format_as_integer(m.asset_count(@organization))

:javascript

  $(window).resize(function() {
    $("##{table_dom_id}").bootstrapTable('resetView');
  });
