:ruby
  table_dom_id = SecureRandom.hex

%table.table.table-hover{:id => table_dom_id}
  %thead
    %tr
      %th.left Name
      %th.left Code
      %th.left Type
      %th.right Count

  %tbody
    - @manufacturers.each do |m|
      %tr{:data => {:action_path => inventory_index_path(:manufacturer_id => m.id)}}
        %td.left= m.name
        %td.left= m.code
        %td.left= m.filter
        %td.right= format_as_integer(m.asset_count(@organization))

- if @manufacturers.count > current_user.num_table_rows
  = render :partial => 'shared/datatable_javascript', :locals => {:id => table_dom_id}
