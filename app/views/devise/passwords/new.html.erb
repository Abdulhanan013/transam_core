<%= dialog_tag("Forgot your password?", "fa fa-exclamation") do %>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<%= simple_form_for(resource, :as => resource_name, :url => user_password_path, :html => {:method => :post, :class => 'form-vertical' }) do |f| %>
  			  <%= f.error_notification %>
			  <%= f.input :email, :required => true, :autofocus => true %>
			
			  <div class="form-actions">
			    <%= f.button :submit, "Send me reset password instructions", :class => 'btn-primary' %>
			  </div>
			
			<% end %>						
			
		  	<%= link_to "Sign in", new_user_session_path %>

		</div>
	</div>
<% end %>

