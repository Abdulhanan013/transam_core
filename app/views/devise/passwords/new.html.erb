<%= dialog_tag("Forgot your password?", "fa fa-sign-in") do %>
	<div class="row-fluid">
		<div class="span12">
			
			<%= render 'shared/messages' %>
			
			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, :class => 'form-vertical' }) do |f| %>
  			  <%= f.error_notification %>
			  <%= f.input :email, :required => true, :autofocus => true %>
			
			  <div class="form-actions">
			    <%= f.button :submit, "Send me reset password instructions", :class => 'btn-primary' %>
			  </div>
			
			<% end %>						
			
		  	<%= link_to "Sign in", new_user_session_path(resource_name) %>

		</div>
	</div>
<% end %>

